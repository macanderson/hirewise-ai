{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env", "**/tsconfig.json", "**/package.json"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "DIRECT_URL",
        "SUPABASE_URL",
        "SUPABASE_KEY",
        "SUPABASE_SERVICE_SECRET",
        "SUPABASE_JWT_SECRET",
        "NEXT_PUBLIC_API_URL"
      ]
    },
    "build": {
      "dependsOn": ["^build", "db:generate"],
      "outputs": [".next/**", "dist/**", "src/db/client/**"],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "DIRECT_URL",
        "SUPABASE_URL",
        "SUPABASE_KEY",
        "SUPABASE_SERVICE_SECRET",
        "SUPABASE_JWT_SECRET",
        "NEXT_PUBLIC_API_URL"
      ]
    },
    "lint": {
      "outputs": [],
      "env": ["NODE_ENV"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "DIRECT_URL",
        "SUPABASE_URL",
        "SUPABASE_KEY",
        "SUPABASE_SERVICE_SECRET",
        "SUPABASE_JWT_SECRET",
        "NEXT_PUBLIC_API_URL"
      ]
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "type-check": {},
    "clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    }
  }
}

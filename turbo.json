{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env.local", "**/.env"],
  "tasks": {
    "db:generate": {
      "cache": false,
      "inputs": ["packages/database/prisma/schema.prisma"],
      "outputs": ["packages/database/src/client/**", "apps/docs/schema/**"]
    },
    "db:push": {
      "cache": false,
      "dependsOn": ["db:generate"],
      "outputs": ["packages/database/generated/**", "apps/docs/schema/**"]
    },
    "db:migrate": {
      "cache": false,
      "dependsOn": ["db:generate"],
      "outputs": ["packages/database/generated/**", "apps/docs/schema/**"]
    },
    "build": {
      "dependsOn": ["^build", "db:generate"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "lint": {},
    "type-check": {
      "dependsOn": ["^build"]
    }
  }
}

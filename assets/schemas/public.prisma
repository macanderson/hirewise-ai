// Core tenant management
model Tenant {
    id         String  @id @default(uuid())
    name       String
    slug       String  @unique
    license_id String
    created_at Int
    updated_at Int
    deleted_at Int?
    created_by String?
    updated_by String?
    deleted_by String?

    // Relations
    license  License   @relation(fields: [license_id], references: [id])
    users    User[]
    projects Project[]

    @@map("tenants")
    @@schema("public")
}

model License {
    id         String      @id @default(uuid())
    type       LicenseType
    features   Json?
    limits     Json?
    created_at Int
    updated_at Int
    deleted_at Int?
    created_by String?
    updated_by String?
    deleted_by String?

    // Relations
    tenants Tenant[]

    @@map("licenses")
    @@schema("public")
}

enum LicenseType {
    TRIAL
    BASIC
    PRO
    ENTERPRISE
    CUSTOM

    @@map("license_type")
    @@schema("public")
}
